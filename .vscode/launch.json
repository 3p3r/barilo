{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Entrypoint [pattern]",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/index.js",
      "console": "integratedTerminal",
      "args": ["pattern"]
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Entrypoint [input]",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/index.js",
      "console": "integratedTerminal",
      "args": ["input"]
    }
  ]
}
